{{!-- Layout for Events (Student View) --}}
<section id="orgs" class="container">
  <h1>Events</h1>
  <h3>Select 1 or more events to attend</h3>
  {{#each posts}}
  <form action="/students/posts" method="POST">
    <div class = "org">
      <h2> <input type="checkbox" name="postId" value="{{id}}"> Title: {{title}}</h2>  
      <p> Host: {{host}}</p>
      <p>Organization: {{org}}</p>
      <p>Date of Event: {{ date }}</p>
      <p>Start: {{ start }}</p>
      <p>End: {{ end }}</p>
      <p>Description: {{description}}</p>
      <ul>
        <li>Hours Received: {{hoursReceived}}</li>
      </ul>
      <ul>
          <li><button> <input type="submit" value="Attend Event"> </button></li> 
          <li><button><a href="/students/view/{{id}}" class="a" >  View </a>  </button> </button></li>
          <li>
        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" 
        class="twitter-share-button" 
        data-text="I am attending the event " + {{title}} + " on " + {{date}} + " at " + {{date}}
        data-via="_serveu" 
        data-hashtags="event" 
        data-show-count="false">Tweet</a>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </li>
    </ul>
    </div>
  {{/each}}
  </form>
</section>